<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= t('Content') %></h1>
    <a href="<%= url_for :controller => :Control, :action => :index, :query => { :referer => @request['request-uri'] }, :reload => true %>" class="ui-btn-right">
      <%= t('Controls') %>
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      <% @categories.each do |category| %>
          <li>
            <a href="<%= url_for :action => :show, :id => category.object, :query => { :lang => Control.lang } %>">
              <%= category.name %>
            </a>
          </li>
      <% end %>
    </ul>
  </div>

</div>
