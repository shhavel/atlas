<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @category.name %></h1>
    <% if Category.find(:all).size > 1 %>
      <a href="<%= url_for :action => :index, :query => { :lang => Control.lang } %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
        <%= t('Back') %>
      </a>
    <% else %>
      <a href="<%= url_for :controller => :Control, :action => :index, :query => { :lang => Control.lang, :referer => "/app/Category/show/#{@category.object}" } %>">
        <%= t('Controls') %>
      </a>
    <% end %>
    <a href="<%= url_for :action => :show, :id => @category.object, :query => { :lang => @next_lang }, :reload => true %>" class="ui-btn-right">
      <%= t(@lang) %>
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      <% @category.maps.each do |map| %>
          <li>
            <a href="<%= url_for :controller => :Map, :action => :show, :id => map.object, :query => { :lang => Control.lang } %>">
              <%= map.name %>
            </a>
          </li>
      <% end %>
    </ul>
  </div>

</div>
