    <a href="<%= Rho::RhoConfig.start_path %>?lang=<%= Control.lang %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      <%= t('Back') %>
    </a>
  </div>

  <div data-role="content" style="background-image: none;">
